extends layout

block head
    link(href="/stylesheets/write-story.css", rel="stylesheet")

    script(type='text/javascript', src='/bower_components/socket.io-client/socket.io.js')
    script(type='text/javascript', src='/javascripts/write-story.js')

block content
    h1 Write a Story
    p. 
      Please wait for ~30 seconds to start.<br>
      20 seconds to write, 10 seconds to vote.  
    div(ng-controller="StoryCtrl")
        form
            input.form-control(id="inputArea", autofocus, ng-model="message")
            button.btn.btn-primary(id="sendButton", type="submit", ng-click="sendMessage()") Send
        ul(id="messageList")
            div(ng-repeat="data in messageList")
                button.btn.btn-default(type="submit", ng-click="vote($index)", id="vote{{$index}}") Vote!
                li {{data.votes}} {{data.msg}}
