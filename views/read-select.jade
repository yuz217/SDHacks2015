extends layout

block head
  
  link(rel='stylesheet' , href='/stylesheets/read-select.css')


block content
  div(ng-controller="ReadCtrl")
    h2 Choose a story to read...
    div.row
      div.text-center
        div(ng-repeat="story in stories")
          div.col-md-2
            h1(ng-click="goToStory(story.storyID)") {{story.firstSentence}}
            p {{story.time}}
            p {{story.views}}